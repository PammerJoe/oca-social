<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="mail.Activity" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Activity_userName')]" position="replace">
            <t t-if="activity.team_name">
                <t t-if="activity.assigned_team_member">
                    <span style="white-space: pre-wrap;"> felelős: <t t-esc="activity.assigned_team_member"/></span>
                </t>
                <t t-else="">
                    <span style="white-space: pre-wrap; color: red; text-weight: bold;"> Nincs felelős!</span>
                </t>
                <span style="white-space: pre-wrap; text-weight: bold;"> (<t t-esc="activity.team_name"/>)</span>
            </t>
            <t t-else="">
                <div class="o_Activity_userName">
                    <t t-esc="assignedUserText"/>
                </div>
            </t>
            <t t-if="activity.team_name">
                <t t-if="!activity.assigned_team_member">
                    <t t-set="userid" t-value="user.id"/>
                    <t t-if="userid in [activity.team_member_ids]">
                        <button class="o_Activity_toolButton o_Activity_editButton btn btn-link" t-on-click="_onClickTake">
                            <i class="fa fa-pencil"/> Elvállal
                        </button>
                    </t>
                </t>
            </t>
        </xpath>
    </t>

</templates>
